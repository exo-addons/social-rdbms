<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
   
   <component>
    <type>org.exoplatform.commons.persistence.impl.EntityManagerService</type>
  </component>
  
  <component>
    <key>org.exoplatform.social.addons.storage.dao.StreamItemDAO</key>
    <type>org.exoplatform.social.addons.storage.dao.jpa.StreamItemDAOImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.social.addons.storage.dao.CommentDAO</key>
    <type>org.exoplatform.social.addons.storage.dao.jpa.CommentDAOImpl</type>
  </component>
  
   <component>
    <key>org.exoplatform.social.addons.storage.dao.ConnectionDAO</key>
    <type>org.exoplatform.social.addons.storage.dao.jpa.ConnectionDAOImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.social.addons.storage.dao.ActivityDAO</key>
    <type>org.exoplatform.social.addons.storage.dao.jpa.ActivityDAOImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.social.core.storage.api.IdentityStorage</key>
    <type>org.exoplatform.social.addons.storage.RDBMSIdentityStorageImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.social.core.storage.api.RelationshipStorage</key>
    <type>org.exoplatform.social.addons.storage.RDBMSRelationshipStorageImpl</type>
  </component>
  
  <component>
    <key>org.exoplatform.social.core.storage.api.ActivityStorage</key>
    <type>org.exoplatform.social.addons.storage.RDBMSActivityStorageImpl</type>
  </component>
  
  <component>
    <type>org.exoplatform.social.core.storage.cache.CachedActivityStorage</type>
  </component>
  
  <component>
    <type>org.exoplatform.social.core.storage.cache.CachedRelationshipStorage</type>
  </component>
    
   <external-component-plugins>
    <target-component>org.exoplatform.commons.api.persistence.DataInitializer</target-component>
    <component-plugin>
      <name>SocialRDBMSChangeLogsPlugin</name>
      <set-method>addChangeLogsPlugin</set-method>
      <type>org.exoplatform.commons.persistence.impl.ChangeLogsPlugin</type>
      <init-params>
        <values-param>
          <name>changelogs</name>
          <description>Change logs of Social RDBMS</description>
          <value>db/changelog/social-rdbms.db.changelog-1.0.0.xml</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  
  <external-component-plugins>
    <target-component>org.exoplatform.social.core.manager.IdentityManager</target-component>
    <component-plugin>
      <name>ProfileESListenerImpl</name>
      <set-method>addProfileListener</set-method>
      <type>org.exoplatform.social.addons.search.listener.ProfileESListenerImpl</type>
    </component-plugin>
  </external-component-plugins>
  
  <external-component-plugins>
    <target-component>org.exoplatform.social.core.manager.RelationshipManager</target-component>
    <component-plugin>
      <name>ConnectionESListenerImpl</name>
      <set-method>addListenerPlugin</set-method>
      <type>org.exoplatform.social.addons.search.listener.ConnectionESListenerImpl</type>
    </component-plugin>
  </external-component-plugins>
  
  <external-component-plugins>
    <target-component>org.exoplatform.services.organization.OrganizationService</target-component>
    <component-plugin>
      <name>UserESListenerImpl</name>
      <set-method>addListenerPlugin</set-method>
      <type>org.exoplatform.social.addons.search.listener.UserESListenerImpl</type>
    </component-plugin>
  </external-component-plugins>
  
   
 
</configuration>
