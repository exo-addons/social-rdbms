<configuration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
  
  <component>
        <key>org.exoplatform.addons.es.index.IndexingService</key>
        <type>org.exoplatform.addons.es.index.elastic.ElasticIndexingService</type>
    </component>
    <component>
        <key>org.exoplatform.addons.es.dao.IndexingOperationDAO</key>
        <type>org.exoplatform.addons.es.dao.impl.IndexingOperationDAOImpl</type>
    </component>
    <component>
        <type>org.exoplatform.addons.es.client.ElasticIndexingClient</type>
    </component>
    <component>
        <type>org.exoplatform.addons.es.client.ElasticSearchingClient</type>
    </component>
    <component>
        <type>org.exoplatform.addons.es.client.ElasticContentRequestBuilder</type>
    </component>
    
    <component>
     <type>org.exoplatform.social.addons.search.ProfileSearchConnector</type>
     <init-params>
        <properties-param>
          <name>constructor.params</name>
          <property name="searchType" value="profile"/>
          <property name="index" value="profile"/>
          <property name="nameField" value="name"/>
          <property name="searchFields" value="name, position, skills"/>
        </properties-param>
      </init-params>
   </component> 
    
    <external-component-plugins>
    <target-component>org.exoplatform.addons.es.index.IndexingService</target-component>
    <component-plugin>
      <name>ProfileIndexingServiceConnector</name>
      <set-method>addConnector</set-method>
      <type>org.exoplatform.social.addons.search.ProfileIndexingServiceConnector</type>
      <init-params>
        <properties-param>
          <name>constructor.params</name>
          <property name="index" value="profile"/>
          <property name="type" value="profile"/>
          <property name="indexFields" value="name, position, skills, avatarUrl, userName, email"/>
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
 
</configuration>
